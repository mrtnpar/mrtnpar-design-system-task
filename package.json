{
  "name": "mrtnpar-design-system-task",
  "version": "1.0.0",
  "description": "Cross-platform design system library for React (web) and React Native (mobile)",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "import": "./dist/tokens/index.mjs",
      "require": "./dist/tokens/index.js",
      "default": "./dist/tokens/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "build:tokens": "style-dictionary build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:visual": "playwright test",
    "test:a11y": "playwright test",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "storybook": "storybook dev -p 6006",
    "storybook:native": "storybook dev -p 7007",
    "build-storybook": "storybook build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "keywords": [
    "design-system",
    "react",
    "react-native",
    "ui-components"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.72.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-links": "^10.1.11",
    "@storybook/addon-themes": "^10.1.11",
    "@storybook/react": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/react-native": "^13.3.3",
    "@testing-library/user-event": "^14.6.1",
    "@tokens-studio/sd-transforms": "^2.0.3",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "10.1.11",
    "happy-dom": "^20.1.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-native": "^0.83.1",
    "react-test-renderer": "^19.2.3",
    "storybook": "^10.1.11",
    "style-dictionary": "^5.1.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite-plugin-react-native-web": "^2.5.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "react-native-web": "^0.21.2"
  }
}
